generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id            String      @id @default(uuid())
  name          String
  address       String
  telephone     String
  workOrder     WorkOrder[]
}

model User {
  id            String      @id @default(uuid())
  username      String      @unique
  email         String      @unique
  firstName     String
  lastName      String
  role          Role
  password      String
  workOrders    WorkOrder[]
}

model WorkOrder {
  id                      Int         @id @default(autoincrement())
  workOrderNumber         Int         @unique
  furnitureSize           Decimal
  estimatedFinishDate     DateTime
  createdDate             DateTime
  price                   Decimal
  status                  Status
  createdFor              String      
  clientId                Client      @relation(fields: [createdFor], references: [id])
  createdBy               String
  user                    User        @relation(fields: [createdBy], references: [id])
  invoices                Invoices[]
}

model Invoices {
  id                Int       @id @default(autoincrement())
  invoiceNumber     Int       @unique
  status            Status
  workOrderId       WorkOrder @relation(fields: [workOrders], references: [id])
  workOrders        Int
}

enum Role {
  USER
  ADMIN
}

enum Status {
  NOT_STARTED
  ONGOING
  COMPLETED
  INVALID // ask mader
}